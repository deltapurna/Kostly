<% provide :title, 'Sign In' %>

<h2>Sign In</h2>
<%= form_tag :sessions do %>
  <div class='form-group'>
    <%= label_tag :email %>
    <%= email_field_tag :email, '', class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= label_tag :password %>
    <%= password_field_tag :password, '', class: 'form-control' %>
  </div>
  <p>Forgot your password? (<%= link_to 'Reset your password', new_password_reset_path %>)</p>

  <%= submit_tag 'Login', class: 'btn btn-primary btn-block' %>
<% end %>
